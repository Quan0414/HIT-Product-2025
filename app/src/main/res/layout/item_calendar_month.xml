<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_oranger_20"
        android:paddingHorizontal="14dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/ic_back_calendar" />

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f800"
            android:gravity="center"
            android:textColor="@color/borderBrown"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/ic_next_calendar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Su"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Mo"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Tu"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="We"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Th"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Fr"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />

        <com.example.hitproduct.common.util.OutlinedTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/f700"
            android:gravity="center"
            android:text="Sa"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:strokeColor="@color/borderBrown"
            app:strokeWidth="2dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
