<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemCalendarDay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivCalendarIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_item_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.hitproduct.common.util.OutlinedTextView
        android:id="@+id/tvDay"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:fontFamily="@font/f900"
        android:paddingHorizontal="12dp"
        android:paddingTop="4dp"
        android:text="01"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@id/ivCalendarIcon"
        app:layout_constraintStart_toStartOf="@id/ivCalendarIcon"
        app:layout_constraintTop_toTopOf="@id/ivCalendarIcon"
        app:strokeColor="@color/borderBrown"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/ivNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_note_calendar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ivCalendarIcon"
        app:layout_constraintEnd_toEndOf="@+id/ivCalendarIcon"
        app:layout_constraintStart_toStartOf="@+id/ivCalendarIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvDay" />

</androidx.constraintlayout.widget.ConstraintLayout>