<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.dialog.food_detail.FoodDetailDialogFragment">

    <ImageView
        android:id="@+id/imgShop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/shop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/bg_food_detail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgShop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/bg_name_food_detail"
        app:layout_constraintBottom_toTopOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="28dp"
        android:src="@drawable/bg_img_food_detail"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_dashed_border"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView4"
        app:layout_constraintStart_toEndOf="@id/imageView3"
        app:layout_constraintTop_toTopOf="@id/imageView3" />

    <ImageView
        android:id="@+id/imgHungerIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/bg_hunger_index"
        app:layout_constraintBottom_toTopOf="@id/imgHappyIndex"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <TextView
        android:id="@+id/tvHungerIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/f900"
        android:text="@string/hunger_index_of_food"
        android:textColor="@color/textBrown"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/imgHungerIndex"
        app:layout_constraintEnd_toEndOf="@id/imgHungerIndex"
        app:layout_constraintStart_toStartOf="@id/imgHungerIndex"
        app:layout_constraintTop_toTopOf="@id/imgHungerIndex" />

    <ImageView
        android:id="@+id/imgHappyIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/bg_happy_index"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@id/imgHungerIndex" />

    <TextView
        android:id="@+id/tvHappyIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/f900"
        android:text="@string/happy_index_of_food"
        android:textColor="@color/pinkText"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@id/imgHappyIndex"
        app:layout_constraintEnd_toEndOf="@id/imgHappyIndex"
        app:layout_constraintStart_toStartOf="@id/imgHappyIndex"
        app:layout_constraintTop_toTopOf="@id/imgHappyIndex" />

    <ImageView
        android:id="@+id/imgMoneyFoodDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_money_food_detail"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/imgHappyIndex" />

    <com.example.hitproduct.common.util.OutlinedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/f900"
        android:padding="2dp"
        android:textSize="16dp"
        app:fillColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/imgMoneyFoodDetail"
        app:layout_constraintEnd_toEndOf="@+id/imgMoneyFoodDetail"
        app:layout_constraintStart_toStartOf="@id/imgMoneyFoodDetail"
        app:layout_constraintTop_toTopOf="@id/imgMoneyFoodDetail"
        app:strokeColor="@color/borderBrown"
        app:strokeWidth="2dp" />

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_close_window"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@id/view1" />


</androidx.constraintlayout.widget.ConstraintLayout>