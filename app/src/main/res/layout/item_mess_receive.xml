<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <io.getstream.avatarview.AvatarView
        android:id="@+id/imgAvatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:avatarViewBorderColor="@color/borderBrown"
        app:avatarViewBorderWidth="2dp"
        app:avatarViewShape="circle"
        app:layout_constraintBottom_toBottomOf="@+id/tvMessReceive"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvMessReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mess_receive"
        android:fontFamily="@font/f700"
        android:maxWidth="300dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="Hello, Tớ là Doanh"
        android:textColor="@color/textBrown"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/imgAvatar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>