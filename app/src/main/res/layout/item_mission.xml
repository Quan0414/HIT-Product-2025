<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <ImageView
        android:id="@+id/imgComplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mission_incomplete"
        app:layout_constraintBottom_toBottomOf="@+id/tvContentMission"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvContentMission" />

    <TextView
        android:id="@+id/tvContentMission"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/f900"
        android:text="dfgdfgdfg"
        android:textColor="@color/textBrown"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMissionCoin"
        app:layout_constraintStart_toEndOf="@+id/imgComplete"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMissionCoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/f700"
        android:text="sdfdsf"
        android:textColor="@color/textBrown"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvContentMission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvContentMission" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintTop_toBottomOf="@id/tvContentMission" />

</androidx.constraintlayout.widget.ConstraintLayout>