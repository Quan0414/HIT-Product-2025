<resources>
    <style name="Custom.Gender.Dropdown"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- tắt viền mặc định -->
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <!-- xóa padding nội tại -->
        <item name="boxCollapsedPaddingTop">0dp</item>

        <!-- bóp minHeight thành 34dp -->
        <item name="android:minHeight">34dp</item>
        <!-- padding ngoài nếu cần -->
        <item name="android:padding">0dp</item>
    </style>

    <style name="Widget.BottomNavigationView.CustomFont"
        parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/f700</item>
    </style>

    <style name="BottomNav.Text.Active" parent="">
        <item name="android:textColor">@color/nav_text_active</item>
        <!-- nếu bạn muốn custom font, size tại đây luôn -->
        <item name="android:fontFamily">@font/f700</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="BottomNav.Text.Inactive" parent="">
        <item name="android:textColor">@color/nav_text_inactive</item>
        <item name="android:fontFamily">@font/f700</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="ReadMoreTextStyle">
        <item name="android:fontFamily">@font/f900</item>
    </style>


</resources>
